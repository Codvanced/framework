
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style type="text/css">
        input.error, textarea.error, span.error, p.error { border: 1px solid red; }
    </style>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@

    <link type="text/css" rel="stylesheet" media="screen" href="@Url.Content("~/Content/css/admin.css")" />
    <link type="text/css" rel="stylesheet" media="screen" href="@Url.Content("~/Content/css/admin_custom.css")" />
    @RenderSection("scripts", false);
</head>
<body>
    <div class="container">
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
